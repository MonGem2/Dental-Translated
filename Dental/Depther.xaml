<Window x:Class="Dental.Depther"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dental"
        mc:Ignorable="d"
        Title="Paying off the debt" Height="100" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Amount" HorizontalContentAlignment="Right"/>
        <TextBox Grid.Column="1" Name="Sum" Margin="2,2"/>
        <Button Grid.Row="1" Margin="2,2" Content="Ok" Click="Button_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="2,2" Content="Cancel" Click="Button_Click_1"/>
    </Grid>
</Window>
