<Window x:Class="Dental.AddTreatment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dental"
        mc:Ignorable="d"
        Title="Add treatment" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Date" FontSize="22" HorizontalContentAlignment="Right"/>
        <Label Content="Description" FontSize="22" HorizontalContentAlignment="Right" Grid.Row="1"/>
        <Label Content="Price" FontSize="22" HorizontalContentAlignment="Right" Grid.Row="2"/>
        <DatePicker Grid.Column="1" Margin="2,2" Name="Date"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="2,2" Name="Descr"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="2,2" Name="Price"/>
        <Button Grid.Row="3" Grid.ColumnSpan="2" Margin="5,10" Click="Button_Click">
            Ready
        </Button>
    </Grid>
</Window>
